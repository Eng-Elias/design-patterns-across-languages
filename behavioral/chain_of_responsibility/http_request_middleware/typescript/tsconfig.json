{
  "compilerOptions": {
    "target": "ES2016",
    "module": "CommonJS",
    "outDir": "./dist",
    "rootDir": "./",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "sourceMap": true, // Optional: for easier debugging
    "declaration": true // Optional: generate .d.ts files
  },
  "include": ["*.ts"], // Include all .ts files in the root
  "exclude": ["node_modules", "**/*.test.ts"] // Exclude tests from build output if desired
}
